{
  "name": "nodejs-api-starter",
  "version": "0.0.1",
  "description": "Always up to date NodeJS starter boilerplate for every project which require a NodeJS API",
  "main": "server.js",
  "scripts": {
    "start": "npm run serve",
    "build": "rm -rf dist && npm run build-ts && npm run lint",
    "serve": "pm2 start ecosystem.config.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "NODE_ENV=test mocha --exit -r co-mocha test/setup.js -r ts-node/register 'src/**/*.spec.ts'",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/vidimitrov/nodejs-api-starter.git"
  },
  "author": "Veselin Dimitrov",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/vidimitrov/nodejs-api-starter/issues"
  },
  "homepage": "https://gitlab.com/vidimitrov/nodejs-api-starter#README",
  "dependencies": {
    "dotenv": "^4.0.0",
    "joi": "^13.1.2",
    "koa": "^2.5.0",
    "koa-helmet": "^3.3.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.5",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/koa": "^2.0.45",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.27",
    "@types/mocha": "^5.0.0",
    "@types/winston": "^2.3.9",
    "chai": "^4.1.2",
    "co-mocha": "^1.2.2",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-import": "^2.10.0",
    "mocha": "^4.1.0",
    "nock": "^9.2.5",
    "nodemon": "^1.17.3",
    "pm2": "^2.10.2",
    "sinon": "^4.5.0",
    "sinon-chai": "^2.14.0",
    "supertest": "^3.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  }
}