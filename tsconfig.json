{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/koa-bodyparser",
      "node_modules/@types"
    ],
  },
  "include": [
    "src/**/*.ts",
    "config/**/*.ts",
    "node_modules/@types/jest",
    "node_modules/@types/node",
    "node_modules/@types/koa",
    "node_modules/@types/koa-bodyparser",
  ],
  "exclude": []
}